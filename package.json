
{
  "name": "netpulse-pro",
  "version": "3.1.0",
  "description": "Aggressive Performance Network Diagnostic Terminal",
  "author": "Network Admin",
  "main": "main.js",
  "scripts": {
    "prebuild": "node -e \"const fs = require('fs'); if (!fs.existsSync('dist')) fs.mkdirSync('dist');\"",
    "build": "npm run prebuild && esbuild index.tsx --bundle --minify --format=esm --outfile=dist/bundle.js --platform=browser --define:process.env.NODE_ENV='\"production\"' --define:process.env.API_KEY='\"'${API_KEY}'\"'",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder --windows"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.12.7",
    "@google/genai": "^1.39.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "esbuild": "^0.19.0"
  },
  "build": {
    "appId": "com.netpulse.pro",
    "productName": "NetPulsePro",
    "win": {
      "target": [
        "portable"
      ],
      "requestedExecutionLevel": "requireAdministrator"
    },
    "directories": {
      "output": "dist_exe"
    },
    "files": [
      "dist/bundle.js",
      "index.html",
      "main.js",
      "package.json"
    ]
  }
}
